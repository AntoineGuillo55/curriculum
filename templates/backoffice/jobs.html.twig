{% extends 'base.html.twig' %}

{% block body %}

<div id="admin">
    <h1>Gestion des expériences professionnelles</h1>
    <div class="container">
        
        <div class="admin-actions">
            <a href="{{ path('job_add') }}">
                <button class="blue-btn">
                     Ajouter une expérience
                </button>
            </a>
            <a href="{{ path('app_admin') }}">
               <button class="blue-btn">
                     Retour au dashboard
                </button>
            </a>
        </div>

        <div class="admin-content">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Poste</th>
                            <th>Entreprise</th>
                            <th>Période</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for job in jobs %}
                        <tr>
                            <td>{{ job.jobTitle }}</td>
                            <td>{{ job.companyName }}</td>
                            <td>{{ job.dateStart|date('m/Y') }} - {{ job.dateEnd ? job.dateEnd|date('m/Y') : 'Présent' }}</td>
                            <td>
                                <a href="{{ path('job_detail', {'id': job.id}) }}" class="btn btn-sm btn-info">
                                    Voir
                                </a>
                                <a href="{{ path('job_edit', {'id': job.id}) }}" class="btn btn-sm btn-warning">
                                    Modifier
                                </a>
                                <a href="#" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette expérience ?')">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Aucune expérience professionnelle trouvée</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block title %}
    Gestion des expériences professionnelles
{% endblock %}

{% block extraStyle %}
    <link rel="stylesheet" href="{{ asset('styles/admin-page.css') }}">
{% endblock %} 