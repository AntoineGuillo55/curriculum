{% extends 'base.html.twig' %}

{% block body %}

<div id="admin">
    <h1>Gestion du portfolio</h1>
    <div class="container">
        
        <div class="admin-actions">
            <a href="#" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un projet
            </a>
        </div>

        <div class="admin-content">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Projet</th>
                            <th>Description</th>
                            <th>Technologies</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for project in projects %}
                        <tr>
                            <td>{{ project.title }}</td>
                            <td>{{ project.description|slice(0, 100) }}...</td>
                            <td>{{ project.technologies|join(', ') }}</td>
                            <td>
                                <span class="badge badge-{{ project.status == 'completed' ? 'success' : (project.status == 'in_progress' ? 'warning' : 'secondary') }}">
                                    {{ project.status|title }}
                                </span>
                            </td>
                            <td>
                                <a href="#" class="btn btn-sm btn-info">
                                    Voir
                                </a>
                                <a href="#" class="btn btn-sm btn-warning">
                                    Modifier
                                </a>
                                <a href="#" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?')">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucun projet trouvé</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
 
        <div class="admin-footer">
            <a href="{{ path('app_admin') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour au dashboard
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block title %}
    Gestion du portfolio
{% endblock %}

{% block extraStyle %}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
{% endblock %} 